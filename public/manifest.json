{
  "manifest_version": 3,
  "name": "Synfluent",
  "description": "AI Summarizer Development research version",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open"
  },
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/",
    "https://unpkg.com/"
  ]
}